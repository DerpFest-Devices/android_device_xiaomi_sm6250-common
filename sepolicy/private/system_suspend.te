#============= system_suspend ==============
allow system_suspend sysfs:dir { open read };
allow system_suspend sysfs_rtc:dir { open read };
allow system_suspend sysfs_rtc:file { getattr open read };
allow system_suspend sysfs:file {open getattr read};
allow system_suspend sysfs_vibrator:dir { read open };
allow system_suspend sysfs_vibrator:file { open getattr read };
